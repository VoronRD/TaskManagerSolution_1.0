<Window x:Class="TaskManager.TagsModule.View.TagEditView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskManager.TagsModule.View"
        mc:Ignorable="d"
        xmlns:prism="http://prismlibrary.com/"
        Title="TagEditView" Height="200" Width="250">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="4*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Grid.Column="0"
        Background="White"
        BorderBrush="LightGray"
        BorderThickness="1"
        Padding="10">
            <StackPanel>
                <!-- Поле ввода тега с биндингом -->
                <TextBox Text="{Binding NewTagName, Mode=TwoWay}"
                 Foreground="Gray"
                 Margin="0,0,0,10">
                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <Setter Property="Text" Value="Название тега"/>
                            <Style.Triggers>
                                <Trigger Property="IsFocused" Value="True">
                                    <Setter Property="Foreground" Value="Black"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </TextBox.Style>
                </TextBox>

                <!-- Палитра цветов -->
                <ItemsControl>
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="8" Rows="3"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Width="24" 
                            Height="24"
                            Margin="2"
                            CornerRadius="3"
                            Cursor="Hand"
                            BorderBrush="LightGray"
                            BorderThickness="1">
                                <Border.Background>

                                    <SolidColorBrush Color="{Binding}"/>
                                </Border.Background>
                                <Border.InputBindings>
                                    <MouseBinding 
                                Command="{Binding DataContext.SelectColorCommand, 
                                        RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                CommandParameter="{Binding}"
                                MouseAction="LeftClick"/>
                                </Border.InputBindings>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>

                    <!-- Список цветов (задаётся вручную) -->
                    <Color>#FF0000</Color>
                    <!-- Красный -->
                    <Color>#00FF00</Color>
                    <!-- Зелёный -->
                    <Color>#0000FF</Color>
                    <!-- Синий -->
                    <Color>#FFFF00</Color>
                    <!-- Жёлтый -->
                    <Color>#FFA500</Color>
                    <!-- Оранжевый -->
                    <Color>#800080</Color>
                    <!-- Фиолетовый -->
                    <Color>#FFC0CB</Color>
                    <!-- Розовый -->
                    <Color>#A52A2A</Color>
                    <!-- Коричневый -->

                    <Color>#008000</Color>
                    <!-- Тёмно-зелёный -->
                    <Color>#000080</Color>
                    <!-- Тёмно-синий -->
                    <Color>#808000</Color>
                    <!-- Оливковый -->
                    <Color>#800000</Color>
                    <!-- Тёмно-красный -->
                    <Color>#008080</Color>
                    <!-- Бирюзовый -->
                    <Color>#C0C0C0</Color>
                    <!-- Серебряный -->
                    <Color>#808080</Color>
                    <!-- Серый -->
                    <Color>#FFFFFF</Color>
                    <!-- Белый -->

                    <Color>#E6E6FA</Color>
                    <!-- Лавандовый -->
                    <Color>#FFF0F5</Color>
                    <!-- Розово-лавандовый -->
                    <Color>#F5F5DC</Color>
                    <!-- Бежевый -->
                    <Color>#FAEBD7</Color>
                    <!-- Античный белый -->
                    <Color>#FFE4C4</Color>
                    <!-- Бисквитный -->
                    <Color>#DEB887</Color>
                    <!-- Бурённый -->
                    <Color>#D2B48C</Color>
                    <!-- Тан -->
                    <Color>#BC8F8F</Color>
                    <!-- Розово-коричневый -->
                </ItemsControl>
            </StackPanel>
        </Border>



        <Border Grid.Column="0" Grid.Row="1" Background="#F0F0F0" Grid.RowSpan="2">
            <UniformGrid Rows="1" Background="#F0F0F0">
                <Button Content="Создать тег"
     Command="{Binding CreateTagCommand}"
     Margin="5" 
     Height="35"/>

            </UniformGrid>


        </Border>

    </Grid>
</Window>
